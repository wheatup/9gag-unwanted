{
	"manifest_version": 3,
	"name": "9GAG Unwanted",
	"short_name": "9GAG Unwanted",
	"version": "0.1",
	"description": "Filter unwanted posts from 9GAG",
	"background": {
		"service_worker": "./background.js"
	},
	"permissions": ["storage", "tabs", "activeTab"],
	"host_permissions": ["*://*.9gag.com/*"],
	"author": "wheatup",
	"homepage_url": "https://github.com/wheatup/",
	"action": {
		"default_popup": "index.html",
		"default_title": "9GAG Unwanted",
		"default_icon": {
			"16": "/images/react-logo-16.png",
			"32": "/images/react-logo-32.png",
			"48": "/images/react-logo-48.png",
			"128": "/images/react-logo-128.png"
		}
	},
	"icons": {
		"16": "/images/react-logo-16.png",
		"32": "/images/react-logo-32.png",
		"48": "/images/react-logo-48.png",
		"128": "/images/react-logo-128.png"
	},
	"content_scripts": [
		{
			"css": ["content.css"],
			"matches": ["*://*.9gag.com/*"],
			"js": ["content.js"]
		}
	]
}
